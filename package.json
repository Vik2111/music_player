{
  "name": "my-music-collection",
  "version": "1.0.0",
  "description": "Приложение для управления музыкальной коллекцией",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win portable",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "music",
    "player",
    "collection"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.myapp.musiccollection",
    "productName": "Моя коллекция",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "icon.png",
      "icon.ico"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.ico",
      "sign": null
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png",
      "category": "public.app-category.music"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icon.png",
      "category": "Audio"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    }
  }
}